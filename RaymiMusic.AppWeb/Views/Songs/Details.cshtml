@model RaymiMusic.Modelos.Cancion

@{
    Layout = "_Layout";
    ViewData["Title"] = "Detalle Canción";
}

<h2>@ViewData["Title"]</h2>

<dl class="row">
    <dt class="col-sm-2">Título</dt>
    <dd class="col-sm-10">@Model.Titulo</dd>

    <dt class="col-sm-2">Artista</dt>
    <dd class="col-sm-10">@Model.Artista?.NombreArtistico</dd>

    <dt class="col-sm-2">Género</dt>
    <dd class="col-sm-10">@Model.Genero?.Nombre</dd>

    <dt class="col-sm-2">Álbum</dt>
    <dd class="col-sm-10">@Model.Album?.Titulo ?? "—"</dd>

    <dt class="col-sm-2">Duración</dt>
    <dd class="col-sm-10">@Model.Duracion</dd>

    <dt class="col-sm-2">Archivo</dt>
    <dd class="col-sm-10">
        <a href="@Model.RutaArchivo" target="_blank">Ver/Descargar</a>
    </dd>
</dl>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</p>
