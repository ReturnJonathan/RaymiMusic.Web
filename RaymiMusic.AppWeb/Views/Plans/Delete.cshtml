@model RaymiMusic.Modelos.PlanSuscripcion
@{
    Layout = "_Layout";
    ViewData["Title"] = "Eliminar Plan";
}

<h2>@ViewData["Title"]</h2>
<h4>¿Confirma que desea eliminar este plan?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Precio</dt>
        <dd class="col-sm-10">@Model.Precio.ToString("C")</dd>

        <dt class="col-sm-2">Descargas Máximas</dt>
        <dd class="col-sm-10">@Model.DescargasMaximas</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
